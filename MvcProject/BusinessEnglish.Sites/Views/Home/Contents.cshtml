@model BusinessEnglish.Sites.Models.HomeViewModel
@{
    ViewBag.Title = "Contents";
}

@section Sidebar {
    @Html.Partial("~/Views/Shared/_Sidebar.cshtml", Model)
}

<div class="section-title">
    <h3 class="">@Model.CurrentSection.Name</h3>
</div>

@foreach (var item in @Model.CurrentSection.Pharses)
{
    <div class="pharse-content">
        <p class="pharse"><strong>@item.Name</strong></p>
        <blockquote class="example">Example: @item.Example</blockquote>
    </div>
}