@model IEnumerable<BusinessEnglish.Models.Pharse>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-right">
    <a href="#createModal" class='btn btn-default' data-toggle="modal" data-backdrop="static"><span class="glyphicon glyphicon-plus"></span> Create new</a>
</h2>

<div class="panel panel-success">
    <div class="panel-heading">
        <h2 class="panel-title">Pharses</h2>
        <div class="pull-right">
            <span class="clickable filter" id="icon-filter" title="Toggle table filter">
                <i class="glyphicon glyphicon-filter"></i>
            </span>
        </div>
    </div>
    <div class="panel-body form-inline">
        @using (Html.BeginForm("Index", "Pharses", FormMethod.Get))
        {
            <div class="input-group">
                <span class="input-group-addon">Section Name</span>
                @Html.DropDownList("SectionId", null, "-- All --", new { @class = "form-control" })
            </div>
            <br />
            <div class="input-group">
                <span class="input-group-addon">Pharse Name</span>
                @Html.TextBox("searchString", null, new { @class = "form-control" })
            </div>
            <br />
            <button class="btn btn-default" type="submit">Filter</button>
        }
    </div>
    <table class="table table-hover" id="task-table">
        <thead>
            <tr>
                <th>#</th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Example)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Section.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td>No results found</td>
                </tr>
            }
            @{int rowNumber = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(rowNumber++)</td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Example)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Section.Name)
                    </td>
                    <td class="text-right">
                        <a href="@Url.Action("Edit", "Pharses", new { id = item.Id })" class='btn btn-primary'><span class="glyphicon glyphicon-edit"></span> Edit</a>
                        <a href="@Url.Action("Details", "Pharses", new { id = item.Id })" class='btn btn-info'><span class="glyphicon glyphicon-list-alt"></span> Details</a>
                        <a href="@Url.Action("Delete", "Pharses", new { id = item.Id })" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="createModal" role="dialog">
    <div class="modal-dialog">
        @Html.Partial("_Create", new BusinessEnglish.Models.Pharse())
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/scriptAdmin")

}