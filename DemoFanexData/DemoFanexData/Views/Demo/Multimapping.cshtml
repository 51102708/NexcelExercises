                @Html.DisplayFor(modelItem => item.Category.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Picture)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
