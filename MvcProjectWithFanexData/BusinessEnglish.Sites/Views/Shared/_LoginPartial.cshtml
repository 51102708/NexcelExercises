@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div class="navbar-collapse collapse text-center">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink(StringResources.Topics, "Index", "Topics")</li>
            <li>@Html.ActionLink(StringResources.Sections, "Index", "Sections")</li>
            <li>@Html.ActionLink(StringResources.Phrases, "Index", "Phrases")</li>
            <li>@Html.ActionLink(StringResources.Users, "Index", "Users")</li>
        </ul>
        @using (Html.BeginForm("Logout", "Admin", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="#">
                        <span class="glyphicon glyphicon-user"></span>
                        @StringResources.Hello, @User.Identity.GetUserName()
                    </a>
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">@StringResources.LogOut</a></li>
            </ul>
        }
    </div>
}